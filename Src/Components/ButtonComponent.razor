@if (isLogin == true)
{
    <button class="w-full bg-gray-100 p-2 rounded-md px-4  font-semibold flex flex-row justify-between items-center">
        <img style="width:20px; height:20px" src="@Icon" />
        <span class="self-center">@Name</span>
        <div />
    </button>
}

@code {
    [Parameter]
    public string? Name { get; set; }
    [Parameter]
    public string? Icon { get; set; }
    [Parameter]
    public Boolean? isLogin { get; set; }

    protected override async Task OnInitializedAsync()
    {
      await Task.Delay(10);

    }
}
